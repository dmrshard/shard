use uo;
use os;

//-----------------------------------------------------------------------------

include "include/client/fonts";
include "include/objtypes/misc";
include "include/player/misc";

//-----------------------------------------------------------------------------

program CanInsertKensaiBag(who, backpack, movetype, inserttype, adding_item, existing_stack)

  var Item := adding_item;
  if(!Item)
    Item := existing_stack;
  endif

  if(Item.objtype >= UOBJ_KENSAI_ELIX_SET and Item.objtype <= UOBJ_KENSAI_ELIX_END)
    return 1;
  endif

  SendSysMessage(who, "Nie mozesz tego tutaj wlozyc.", FONT_NORMAL, COLOR_RED);
  return 0;

endprogram

