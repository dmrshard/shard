use os;

//--------------------------------------------------------------------------------

function ExPid(Pid)

  Pid := CInt(Pid);

  if(Pid)
    if(GetProcess(Pid))
      return 1;
    endif
  endif

  return 0;

endfunction

//-----------------------------------------------------------------------------

function KillPid(Pid)

  Pid := CInt(Pid);

  if(Pid)
    var Proc := GetProcess(Pid);
    if(Proc)
      Proc.kill();
      return 1;
    endif
  endif

  return 0;

endfunction

//-----------------------------------------------------------------------------

function GetProc(Pid)

  Pid := CInt(Pid);

  if(Pid)
    return GetProcess(Pid);
  endif

  return 0;

endfunction

